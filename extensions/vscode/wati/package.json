{
    "name": "wati",
    "displayName": "WATI",
    "description": "Syntax highlighting & intellisense for WATI.",
    "version": "1.0.2",
    "license": "MIT",
    "icon": "images/icon.png",
    "publisher": "NateLevin",
    "keywords": ["wati", "webassembly", "wasm", "wat", "wati2wat"],
    "engines": {
        "vscode": "^1.51.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "wati",
                "aliases": [
                    "WebAssembly Text Format Improved",
                    "wati"
                ],
                "extensions": [
                    ".wati"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wati",
                "scopeName": "source.wati",
                "path": "./syntaxes/wati.json"
            }
        ],
        "configuration": {
            "title": "WATI",
            "properties": {
                "wati.useIntellisenseInWatFiles": {
                    "type":"boolean",
                    "default": true,
                    "description": "If true, WATI intellisense (hover, completion, signatures) will be used in WAT files. Defaults to true."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.51.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "typescript": "^4.0.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/UltimatePro-Grammer/wati"
    }
}
